{
  "name": "todo-calendar-app",
  "version": "1.0.0",
  "description": "Full-stack Todo Calendar application with Angular frontend and Node.js backend",
  "scripts": {
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "cd backend && npm run dev",
    "backend:start": "cd backend && npm start",
    "frontend:dev": "cd frontend && ng serve",
    "frontend:build": "cd frontend && ng build",
    "frontend:build:prod": "cd frontend && ng build --configuration production",
    "start": "npm run backend:start",
    "build": "npm run frontend:build",
    "build:prod": "npm run frontend:build:prod"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "keywords": [
    "angular",
    "nodejs",
    "sqlite",
    "todo",
    "calendar",
    "typescript"
  ],
  "author": "Your Name",
  "license": "MIT"
}
